{
  "private": true,
  "scripts": {
    "generate-toc": "markdown-toc -i",
    "precommit": "lint-staged"
  },
  "lint-staged": {
    "data/**/*.json": ["prettier-eslint --write", "git add"],
    "*.md": ["npm run generate-toc", "prettier-eslint --write", "git add"]
  },
  "devDependencies": {
    "husky": "^0.14.3",
    "lint-staged": "^6.0.1",
    "markdown-toc": "^1.2.0",
    "prettier-eslint-cli": "^4.7.0"
  }
}
